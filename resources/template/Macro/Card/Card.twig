{% macro basic(header, title, subtitle, content, footer, other_content_raw, margin) %}
    {% import _self as Card %}
    <div class="card mb-{{ margin|default('3') }}">
        {{ Card.content(type, header, title, subtitle, content, footer, other_content_raw) }}
    </div>
{% endmacro %}

{% macro withBorder(type, header, title, subtitle, content, footer, other_content_raw, margin) %}
    {% import _self as Card %}
    <div class="card border-{{ type|default('primary') }} mb-{{ margin|default('3') }}">
        {{ Card.content(type, header, title, subtitle, content, footer, other_content_raw) }}
    </div>
{% endmacro %}

{% macro withBackground(type, header, title, subtitle, content, footer, other_content_raw, margin) %}
    {% import _self as Card %}
    <div class="card {% if type != 'light' %}text-white {% endif %}bg-{{ type|default('primary') }} mb-{{ margin|default('3') }}">
        {{ Card.content(null, header, title, subtitle, content, footer, other_content_raw) }}
    </div>
{% endmacro %}

{% macro content(type, header, title, subtitle, content, footer, other_content_raw) %}

    {% if header %}
        <div class="card-header">{{ header }}</div>
    {% endif %}

    <div class="card-body">
        <h4 class="card-title">{{ title }}</h4>
        {% if subtitle %}<h6 class="card-subtitle mb-2 text-muted">{{ subtitle }}</h6>{% endif %}
        <p class="card-text">{{ content|raw }}</p>
    </div>

    {% if other_content_raw %}
        {{ other_content_raw|raw }}
    {% endif %}

    {% if footer %}
        <div class="card-footer text-muted">{{ footer }}</div>
    {% endif %}

{% endmacro %}
