{% macro card(type, header, title, subtitle, content, footer, other_content_raw, margin) %}
<div class="card {% if type != 'light' %}text-white {% endif %}bg-{{ type|default('primary') }} mb-{{ margin|default('3') }}">
    {% import '@template/Macro/Card/CardContent.twig' as CardContent %}

    {{ CardContent.card(null, header, title, subtitle, content, footer, other_content_raw) }}
</div>
{% endmacro %}
