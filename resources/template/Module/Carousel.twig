{% block module_carousel %}

<div id="{{ carousel.getId() }}" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel-indicators" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-indicators" data-slide-to="1"></li>
        <li data-target="#carousel-indicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        {% for item in carousel.getItems() %}
        <div class="carousel-item active">
            <img class="d-block w-100" src="{{ item.getImage().getUrl() }}" alt="{{ item.getImage.getAltText() }}">
            {% if item.hasCaption() %}
            <div class="carousel-caption d-none d-md-block">
                <h5>{{ item.getCaption().getTitle() }}</h5>
                <p>{{ item.getCaption().getDescription() }}</p>
            </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    {% if controls.isEnabled() %}
    <a class="carousel-control-prev" href="#carousel-indicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ controls.getLabel('CAROUSEL_CONTROL_PREVIOUS_LABEL', 'Previous') }}</span>
    </a>
    <a class="carousel-control-next" href="#carousel-indicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ carousel.getLabel('CAROUSEL_CONTROL_NEXT_LABEL', 'Next') }}</span>
    </a>
    {% endif %}
</div>

{% endblock %}
